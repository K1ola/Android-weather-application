<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="dataViewModel"
            type="com.example.myapplication.viewModel.DataViewModel" />
        <import type="android.view.View"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/cardview_light_background"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/arrow_back"
                    android:background="@color/cardview_light_background"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_arrow_left_alt_black_18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="14dp"
                    android:text="Избранное"
                    android:textColor="@color/cardview_dark_background"/>

                <ImageButton
                    android:id="@+id/search"
                    android:background="@color/cardview_light_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/search"/>


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

<!--        Current place-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:background="@color/colorBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Текущее место"
                android:textColor="@color/colorWhite"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <TextView
                    android:id="@+id/wet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@{dataViewModel.weather.town}"
                    android:textSize="25sp"
                    style="@style/WhiteText" />

                <TextView
                    android:id="@+id/wet_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@{dataViewModel.weather.temperature + dataViewModel.settings.currentTemperatureMeasure}"
                    android:textSize="25sp"
                    style="@style/WhiteText" />

                <TextView
                    android:id="@+id/wet_measure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{dataViewModel.weather.icon}"
                    android:textSize="25sp"
                    style="@style/WhiteText" />
            </LinearLayout>

        </LinearLayout>

        <!--        if Favs list if empty -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{dataViewModel.weatherListFavs.size() == 0 ? View.VISIBLE : View.GONE}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Избранное"
                android:textColor="@color/cardview_dark_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingBottom="14dp"
                android:text="Добавьте город в избранное - вы сможете быстро смотреть, какая там погода. "
                style="@color/cardview_dark_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Для этого у найденного города нажмите на ☆"
                style="@color/cardview_dark_background" />

        </LinearLayout>

        <!--        if Favs list if not empty -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{dataViewModel.weatherListFavs.size() == 0 ? View.GONE : View.VISIBLE}">
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favs_list"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="10dp" />
<!--                app:setAdapter="@{dataViewModel.getWeatherAdapter()}"/>-->

        </LinearLayout>

    </LinearLayout>
</layout>