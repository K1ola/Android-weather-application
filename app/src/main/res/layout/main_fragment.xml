                        android:layout_height="wrap_content"
                        app:imageResource="@{dataViewModel.weathersDaily.get(2).icon}"
                        android:adjustViewBounds="true"
                        android:maxWidth="56dp"
                        android:maxHeight="56dp"
                        android:scaleType="fitCenter"   />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersDaily.get(2).temperature + dataViewModel.settings.currentTemperatureMeasure}"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="4dp"
                    android:onClick="@{() -> dataViewModel.onDayClick(3)}">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersDaily.get(3).time}"
                        android:textSize="14sp"
                        style="@style/WhiteText" />

                    <ImageView
                        android:tint="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:imageResource="@{dataViewModel.weathersDaily.get(3).icon}"
                        android:adjustViewBounds="true"
                        android:maxWidth="56dp"
                        android:maxHeight="56dp"
                        android:scaleType="fitCenter"   />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersDaily.get(3).temperature + dataViewModel.settings.currentTemperatureMeasure}"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="4dp"
                    android:onClick="@{() -> dataViewModel.onDayClick(4)}">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersDaily.get(4).time}"
                        android:textSize="14sp"
                        style="@style/WhiteText" />

                    <ImageView
                        android:tint="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:imageResource="@{dataViewModel.weathersDaily.get(4).icon}"
                        android:adjustViewBounds="true"
                        android:maxWidth="56dp"
                        android:maxHeight="56dp"
                        android:scaleType="fitCenter"   />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersDaily.get(4).temperature + dataViewModel.settings.currentTemperatureMeasure}"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

<!--            </ScrollView>-->



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersHourly.get(0).time}"
                        android:textSize="14sp"
                        style="@style/WhiteText" />

                    <ImageView
                        android:tint="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:imageResource="@{dataViewModel.weathersHourly.get(0).icon}"
                        android:adjustViewBounds="true"
                        android:maxWidth="56dp"
                        android:maxHeight="56dp"
                        android:scaleType="fitCenter"   />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersHourly.get(0).temperature + dataViewModel.settings.currentTemperatureMeasure}"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersHourly.get(1).time}"
                        android:textSize="14sp"
                        style="@style/WhiteText" />

                    <ImageView
                        android:tint="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:imageResource="@{dataViewModel.weathersHourly.get(1).icon}"
                        android:adjustViewBounds="true"
                        android:maxWidth="56dp"
                        android:maxHeight="56dp"
                        android:scaleType="fitCenter"   />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersHourly.get(1).temperature + dataViewModel.settings.currentTemperatureMeasure}"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersHourly.get(2).time}"
                        android:textSize="14sp"
                        style="@style/WhiteText" />

                    <ImageView
                        android:tint="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:imageResource="@{dataViewModel.weathersHourly.get(2).icon}"
                        android:adjustViewBounds="true"
                        android:maxWidth="56dp"
                        android:maxHeight="56dp"
                        android:scaleType="fitCenter"   />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersHourly.get(2).temperature + dataViewModel.settings.currentTemperatureMeasure}"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersHourly.get(3).time}"
                        android:textSize="14sp"
                        style="@style/WhiteText" />

                    <ImageView
                        android:tint="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:imageResource="@{dataViewModel.weathersHourly.get(3).icon}"
                        android:adjustViewBounds="true"
                        android:maxWidth="56dp"
                        android:maxHeight="56dp"
                        android:scaleType="fitCenter"   />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersHourly.get(3).temperature + dataViewModel.settings.currentTemperatureMeasure}"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersHourly.get(4).time}"
                        android:textSize="14sp"
                        style="@style/WhiteText" />

                    <ImageView
                        android:tint="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:imageResource="@{dataViewModel.weathersHourly.get(4).icon}"
                        android:adjustViewBounds="true"
                        android:maxWidth="56dp"
                        android:maxHeight="56dp"
                        android:scaleType="fitCenter"   />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersHourly.get(4).temperature + dataViewModel.settings.currentTemperatureMeasure}"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>