<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="dataViewModel"
            type="com.example.myapplication.viewModel.DataViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/partly_cloudy_night_fon">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/favs"
                    android:background="@color/colorPrimary"
                    android:foreground="?selectableItemBackground"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/menu"/>

                <TextView
                    android:id="@+id/town"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/main_setting"
                    android:paddingRight="110dp"
                    android:textColor="#DAEFFA"
                    android:text="@{dataViewModel.currentTown}"
                    android:textSize="20dp"/>

                <ImageButton
                    android:id="@+id/main_setting"
                    android:background="@color/colorPrimary"
                    android:foreground="?selectableItemBackground"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/setting"/>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin"
                android:text="@{dataViewModel.weather.temperature}"
                android:textSize="20sp"
                style="@style/WhiteText" />

            <TextView
                android:id="@+id/temperature_measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-thin"
                android:contentDescription="Temperature"
                android:text="@{dataViewModel.settings.currentTemperatureMeasure}"
                android:textSize="40sp"
                style="@style/WhiteText" />

            <ImageView
                android:id="@+id/imageView"
                android:tint="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                app:imageResource="@{dataViewModel.weather.icon}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="@{dataViewModel.weather.summary}"
                android:textSize="25sp"
                style="@style/WhiteText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <TextView
                    android:id="@+id/wet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Влажность: "
                    android:textSize="17sp"
                    style="@style/WhiteText" />

                <TextView
                    android:id="@+id/wet_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/Wet"
                    android:text="@{String.format(@string/Wet, dataViewModel.weather.wet)}"
                    android:textSize="17sp"
                    style="@style/WhiteText" />

                <TextView
                    android:id="@+id/wet_measure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="17sp"
                    style="@style/WhiteText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <TextView
                    android:id="@+id/pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Давление: "
                    android:textSize="17sp"
                    style="@style/WhiteText" />

                <TextView
                    android:id="@+id/pressure_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/Pressure"
                    android:text="@{String.format(@string/Pressure, dataViewModel.weather.pressure)}"
                    android:textSize="17sp"
                    style="@style/WhiteText" />

                <TextView
                    android:id="@+id/pressure_measure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{dataViewModel.settings.currentPressureMeasure}"
                    android:textSize="17sp"
                    style="@style/WhiteText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <TextView
                    android:id="@+id/wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Сила ветра: "
                    android:textSize="17sp"
                    style="@style/WhiteText" />

                <TextView
                    android:id="@+id/wind_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/Wind"
                    android:text="@{String.format(@string/Wind, dataViewModel.weather.wind)}"
                    android:textSize="17sp"
                    style="@style/WhiteText" />

                <TextView
                    android:id="@+id/wind_measure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{dataViewModel.settings.currentWindMeasure}"
                    android:textSize="17sp"
                    style="@style/WhiteText" />
            </LinearLayout>

        </LinearLayout>
<!--            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"-->
<!--                android:id="@+id/scrollmain"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="4dp"
                    android:onClick="@{() -> dataViewModel.onDayClick(0)}">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersDaily.get(0).time}"
                        android:textSize="14sp"
                        style="@style/WhiteText" />

                    <ImageView
                        android:tint="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:imageResource="@{dataViewModel.weathersDaily.get(0).icon}"
                        android:adjustViewBounds="true"
                        android:maxWidth="56dp"
                        android:maxHeight="56dp"
                        android:scaleType="fitCenter"   />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersDaily.get(0).temperature + dataViewModel.settings.currentTemperatureMeasure}"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="4dp"
                    android:onClick="@{() -> dataViewModel.onDayClick(1)}">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersDaily.get(1).time}"
                        android:textSize="14sp"
                        style="@style/WhiteText" />

                    <ImageView
                        android:tint="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:imageResource="@{dataViewModel.weathersDaily.get(1).icon}"
                        android:adjustViewBounds="true"
                        android:maxWidth="56dp"
                        android:maxHeight="56dp"
                        android:scaleType="fitCenter"   />

                    <TextView
                        style="@style/WhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersDaily.get(1).temperature + dataViewModel.settings.currentTemperatureMeasure}"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="4dp"
                    android:onClick="@{() -> dataViewModel.onDayClick(2)}">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="@{dataViewModel.weathersDaily.get(2).time}"
                        android:textSize="14sp"
                        style="@style/WhiteText" />

                    <ImageView
                        android:tint="@color/colorWhite"
