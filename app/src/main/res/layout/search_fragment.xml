<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="dataViewModel"
            type="com.example.myapplication.viewModel.DataViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/cardview_light_background"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/arrow_back"
                    android:background="@color/cardview_light_background"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_arrow_left_alt_black_18dp"/>

                <EditText android:id="@+id/search_input"
                    android:layout_weight="1"
                    android:layout_marginLeft="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@={dataViewModel.searchTown}"
                    android:hint="Город или район" />
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:text="Город или район"-->
<!--                    android:textColor="@color/cardview_dark_background"/>-->

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:text="История поиска"-->
<!--            android:textColor="@color/cardview_dark_background"/>-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/found_towns"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="10dp" />

    </LinearLayout>
</layout>